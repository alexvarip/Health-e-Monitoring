@page "/home"
@model IndexLoggedInModel
@{
    ViewData["Title"] = "Welcome";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="card shadow-lg mt-5 mb-4 border-0 rounded-4 narrow-card">
        <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4">
            <h3 class="mb-0">
                <i class="bi bi-house-door-fill me-2"></i>
                Welcome, @User.Identity.Name!
            </h3>
        </div>
        <div class="card-body p-5">
            <div class="row align-items-center justify-content-center mb-4">
                <div class="col-auto d-none d-md-block text-center">
                    <i class="bi bi-person-check fs-1 text-primary"></i>
                </div>
                <div class="col-md-8">
                    <p class="lead text-center mb-3">
                        <span class="fw-bold text-primary-emphasis">Health e-Monitoring</span> empowers you to track, record, and analyze patient vital signs with ease.
                    </p>
                    <p class="text-center mb-4">
                        <span class="badge bg-info text-dark me-1">Heart Rate</span>
                        <span class="badge bg-info text-dark me-1">Blood Pressure</span>
                        <span class="badge bg-info text-dark me-1">Oxygen Saturation</span>
                    </p>
                    <div class="alert alert-success text-center mb-4">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        You are signed in and can now access all features.
                    </div>
                    <p class="text-center">
                        <span class="fw-semibold text-primary-emphasis">Use the menu on the left to view patients, run simulations, and monitor vital signs.</span>
                    </p>
                </div>
            </div>
            <hr />
            <div class="alert alert-secondary mt-3 mb-0 text-center">
                <small>
                    Powered by <span class="fw-bold">ASP.NET Core Razor Pages</span>
                    (<span class="text-secondary">.NET 9, C# 13</span>).
                </small>
            </div>
        </div>
    </div>
}