@page "/patients"
@model PatientListModel
@{
    ViewData["Title"] = "Patients List";
}

<div class="card narrow-card mt-4 mx-auto shadow-sm rounded-top-4 overflow-hidden">
    <div class="card-header bg-gradient bg-primary text-white text-center">
        <h3 class="mb-0"><i class="bi bi-heart-pulse-fill me-2"></i>Patients List</h3>
    </div>
    <div class="card-body">
        <div class="row align-items-center justify-content-start">
            <div class="me-4 d-none d-md-block text-center">
                <i class="bi bi-hospital fs-2 text-primary"></i>
            </div>
            <div class="flex-grow-1">
                <div>
                    @if (Model.Patients != null && Model.Patients.Any())
                    {
                        <ul class="list-group list-group-flush rounded-3">
                            @foreach (var patient in Model.Patients)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center custom-list-item" style="font-size: 1rem; padding: 0.4rem 0.5rem;">
                                    <a asp-page="/PatientDetails" asp-route-id="@patient.PatientId" class="patient-list-link d-flex flex-wrap align-items-center gap-2 w-100 text-decoration-none" style="color: inherit;">
                                        <i class="bi bi-person-circle me-1" style="font-size: 1.25rem;"></i>
                                        <span class="fw-semibold">@patient.Name</span>
                                        <span class="d-flex align-items-center">
                                            <i class="bi bi-calendar-heart text-info me-1 fs-6"></i>
                                            <span class="fw-semibold me-1">Age:</span>
                                            <span class="badge bg-info text-dark ms-1 px-2 py-1">@patient.Age yrs</span>
                                        </span>
                                        <span class="d-flex align-items-center">
                                            <i class="bi bi-door-open text-secondary me-1 fs-6"></i>
                                            <span class="fw-semibold me-1">Room:</span>
                                            <span class="badge bg-secondary text-white ms-1 px-2 py-1">@patient.RoomNumber</span>
                                        </span>
                                        <span class="d-flex align-items-center">
                                            <i class="bi bi-person-badge me-1 fs-6" style="color:#6c63ff;"></i>
                                            <span class="fw-semibold me-1">ID:</span>
                                            <span class="badge bg-light text-dark ms-1 px-2 py-1">@patient.PatientId</span>
                                        </span>
                                    </a>
                                    <form method="get" asp-page="/monitorvitals" asp-route-id="@patient.PatientId" style="display:inline;">
                                        <button type="submit" class="monitor-btn-link">
                                            <i class="bi bi-activity me-1"></i> Monitor
                                        </button>
                                    </form>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p>No patients available.</p>
                    }
                </div>
            </div>
        </div>
        <hr />
    </div>
</div>