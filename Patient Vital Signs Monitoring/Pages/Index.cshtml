@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="card shadow-lg mt-5 mb-4 border-0 rounded-4 narrow-card">
    <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4">
        <h3 class="mb-0">
            <i class="bi bi-heart-pulse-fill me-2"></i>
            Welcome to Health e-Monitoring!
        </h3>
    </div>
    <div class="card-body p-5">
        <div class="row align-items-center justify-content-center mb-4">
            <div class="col-auto d-none d-md-block text-center">
                <i class="bi bi-person-check fs-1 text-primary"></i>
            </div>
            <div class="col-md-8">
                <p class="lead text-center mb-3">
                    <span class="fw-bold text-primary-emphasis">Health e-Monitoring</span> is your modern solution for tracking, recording, and analyzing patient vital signs in real time.
                </p>
                <p class="text-center mb-4">
                    <span class="badge bg-info text-dark me-1">Heart Rate</span>
                    <span class="badge bg-info text-dark me-1">Blood Pressure</span>
                    <span class="badge bg-info text-dark me-1">Oxygen Saturation</span>
                </p>
                <div class="alert alert-info text-center mb-4">
                    <strong>Get started:</strong>
                    <a href="/Identity/Account/Register" class="btn btn-outline-primary mx-2">Register</a>
                    <span>or</span>
                    <a href="/Identity/Account/Login" class="btn btn-outline-primary mx-2">Sign In</a>
                </div>
                <p class="text-center text-secondary mb-2">
                    <i class="bi bi-info-circle"></i>
                    You must be signed in to access patient data and simulation features.
                </p>
                <p class="text-center">
                    <span class="fw-semibold text-primary-emphasis">Use the menu on the left to explore patient records, run simulations, and monitor vital signs.</span>
                </p>
            </div>
        </div>
        <hr />
        <div class="alert alert-secondary mt-3 mb-0 text-center">
            <small>
                Powered by <span class="fw-bold">ASP.NET Core Razor Pages</span>
                (<span class="text-secondary">.NET 9, C# 13</span>).
            </small>
        </div>
    </div>
</div>