@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="wrapper" style="min-height: 80vh;">
    <div class="card narrow-card shadow" style="margin-top: 60px; border-radius: 16px;">
        <div class="card-body">
            <h2 class="text-center mb-4" style="color: #258cfb;">Sign in to your account</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <button id="login-submit" type="submit" class="btn w-100" style="background: linear-gradient(135deg, #258cfb 60%, #6a82fb 100%); color: #fff; border-radius: 8px; border: none;">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Log in
                </button>
                <div class="mt-3">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="link-primary">Forgot your password?</a>
                </div>
                <div class="mt-2">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link-primary">Register as a new user</a>
                </div>
                <div class="mt-2">
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="link-primary">Resend email confirmation</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}